---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import Cards from "../components/Cards.astro";
import Footer from "../components/Footer.astro";
---

<Layout
	title="Alternify"
	description="Find Alternatives to your Spotify Tracks"
>
	<main
		class="animate-fade-in-up w-screen h-screen overflow-y-auto flex flex-col items-center mx-auto px-8 py-12 md:py-16 lg:px-10"
	>
		<div class="flex flex-col text-center gap-4 mb-4 mt-10">
			<h1 class="text-4xl">Alternify ðŸŽµ</h1>
			<h2 class="opacity-60">Find Alternatives to your Spotify Tracks</h2>
		</div>
		<form
			class="flex flex-col sm:flex-row space-y-3.5 sm:space-y-0 items-center justify-center space-x-1 w-full max-w-3xl"
		>
			<input
				id="url"
				name="url"
				class="border p-2 w-full md:w-[400px] rounded-xl outline-pink-500"
				type="text"
				placeholder="Enter a Spotify song link"
			/>
			<button
				type="submit"
				class="group relative inline-flex min-w-40 h-10 items-center justify-center overflow-hidden rounded-full bg-pink-500 font-medium text-white transition"
			>
				<span class="flex px-6 items-center text-nowrap">Get Alternatives</span>
				<div
					class="absolute inset-0 flex h-full w-full justify-center [transform:skew(-12deg)_translateX(-100%)] group-hover:duration-1000 group-hover:[transform:skew(-12deg)_translateX(100%)]"
				>
					<div class="relative h-full w-8 bg-white/20"></div>
				</div>
			</button>
		</form>
		<Hero />
		<Cards />
		<Footer />
	</main>
	<a
		class="invisible md:visible border rounded-full py-1 px-4 absolute top-4 right-4 text-xs bg-pink-500/90 text-white font-medium hover:scale-105 transition-transform"
		rel="noopener noreferrer"
		target="_blank"
		href="https://github.com/felipetodev/alternify"
	>
		GitHub âœ¨
	</a>
</Layout>
