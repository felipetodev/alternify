import Layout from "@/layouts/Layout.astro";
---
<Layout
  title="Alternify"
  description="Page Not Found - Alternify"
>
  <div class="flex flex-col text-center gap-4 mt-10">
    <h1 class="text-4xl">Alternify ðŸŽµ</h1>
    <h2 class="opacity-60">
